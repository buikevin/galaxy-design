{
  "name": "@galaxy-ui/vue",
  "version": "0.0.1",
  "description": "Galaxy UI components for Vue 3 with Radix Vue + Tailwind CSS",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@galaxy-ui/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./components/*": {
      "@galaxy-ui/source": "./src/components/*.vue",
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js",
      "default": "./dist/components/*.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "vue",
    "vue3",
    "components",
    "ui",
    "radix-vue",
    "tailwind",
    "tailwindcss",
    "accessible",
    "galaxy-ui"
  ],
  "author": {
    "name": "Bùi Trọng Hiếu (kevinbui)",
    "email": "kevinbui210191@gmail.com",
    "url": "https://github.com/buikevin"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/buikevin/galaxy-ui-cli",
    "directory": "packages/vue"
  },
  "bugs": {
    "url": "https://github.com/buikevin/galaxy-ui-cli/issues"
  },
  "homepage": "https://github.com/buikevin/galaxy-ui-cli#readme",
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "dependencies": {
    "radix-vue": "^1.9.0",
    "@vueuse/core": "^10.9.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.0",
    "lucide-vue-next": "^0.460.0",
    "vue-echarts": "^7.0.3",
    "echarts": "^5.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "typescript": "^5.3.0",
    "vue-tsc": "^2.0.0",
    "vitest": "^1.0.0",
    "@vue/test-utils": "^2.4.0",
    "@testing-library/vue": "^8.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "jsdom": "^23.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  }
}
